@model GummiBearKingdom.Models.Category


<div class="jumbotron"><h2>Edit @Model.CategoryName Category</h2></div>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.CategoryId)

    <label>Name</label>
    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })

    <label>Description</label>
    @Html.EditorFor(model => model.CategoryDescription, new { htmlAttributes = new { @class = "form-control" } })

    <input type="Submit" value="Save" class ="btn btn-info"/>
    <input type="button" class="btn btn-warning" value="Back" onclick="location.href='@Url.Action("Index")'" />
}

